{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .navbar {
            border-bottom: 2px solid white;
            position: fixed;
            top: 0;
            width: 100%;
            font-size: 1.2em;
        }
        body {
            background-color: #000;
            color: #fff;
            position: relative;
            padding-top: 60px; /* Adjusted to make space for the fixed navbar */
        }
        .form-control {
            background-color: #1c1c1c;
            color: #fff;
            border: none;
            border-radius: 0;
            box-shadow: inset 0 1px 3px rgba(0,0,0,0.3);
            transition: background-color 0.3s, color 0.3s, box-shadow 0.3s;
        }
        .form-control:focus {
            background-color: #333;
            color: #fff;
            box-shadow: 0 0 5px rgba(255, 102, 0, 0.5);
        }
        .btn-primary {
            background-color: #ff6600;
            color: #fff;
            border: none;
            border-radius: 0;
            transition: background-color 0.3s, transform 0.3s, box-shadow 0.3s;
        }
        .btn-primary:hover {
            background-color: #ff4500;
            transform: scale(1.05);
            box-shadow: 0 4px 10px rgba(255, 69, 0, 0.5);
        }
        .container {
            position: relative;
            top: 10%;
            padding: 30px;
            border-radius: 10px;
            background: linear-gradient(to right, #002, #003, #002);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            animation: fadeIn 1s ease-in-out;
        }
        .col-md-6 {
            position: relative;
            animation: slideUp 0.5s ease-out forwards;
        }
        h1 {
            text-align: center;
            margin-bottom: 30px;
        }
        .form-group {
            margin-bottom: 20px;
        }
        .form-check-label {
            padding-left: 1.25rem; /* Default padding of form-check-label */
        }
        .form-check-input {
            margin-top: 0.3rem;
            margin-left: -1.25rem; /* Align checkbox with label text */
        }
        @keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }
        @keyframes slideUp {
            from {
                transform: translateY(100%);
            }
            to {
                transform: translateY(0);
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1>Register</h1>

                {{ form_start(registrationForm, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}
                    <div class="form-group">
                        {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(registrationForm.nom, null, {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(registrationForm.nom, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group">
                        {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="form-group form-check">
                        {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                        {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'form-check-label'}}) }}
                    </div>

                    <button type="submit" class="btn btn-primary btn-block">Register</button>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}
