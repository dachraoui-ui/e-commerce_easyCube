{% extends 'base.html.twig' %}

{% block title %}EasyCubi{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <style>
    p{
        margin-top: 50px;
        margin-left: 50px;
    }
    .product-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            padding: 20px;
        }
        .product {
            position: relative;
            overflow: hidden;
            border: 2px solid orange;
        }
        .product img {
            width: 100%;
            height: auto;
            transition: transform 0.3s;
        }
        .product:hover img {
            transform: scale(1.1);
        }
        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.2);
            color: #fff;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            opacity: 0;
            transition: opacity 0.3s;
        }
        .product:hover .overlay {
            opacity: 1;
        }
        h3{
            color:orange;
        }
        .btn {
        background-color: #ff6600;
        border: 1px solid #ff6600;
        padding: 10px 20px;
        color: #000;
        text-transform: uppercase;
        font-weight: bold;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }
    .btn:hover {
        background-color: #ff4500;
    }
    .btn-light {
        background-color: #fff;
        color: #333;
    }
        </style>
    
{% endblock %}
    
{% block body %}

    
    <p class="glitch">
        <span aria-hidden="true">Welcome to EasyCubi</span>
        Welcome to EasyCubi
        <span aria-hidden="true">Welcome to EasyCubi</span>
    </p>
    <div class="product-grid">
    <div class="product">
        <img src="{{ asset('images/ghost_cube.jpeg-66488d9a2f6de.jpeg') }}" alt="Product 1">
        <div class="overlay">
            <h3>Ghost_Cube</h3>
            
        </div>
    </div>
    <div class="product">
        <img src="{{ asset('images/megarubic.jpeg-66488d36487fb.jpeg') }}" alt="Product 2">
        <div class="overlay">
            <h3>Megarubic</h3> 
        </div>
    </div>
    <div class="product">
        <img src="{{ asset('images/mirror cube.jpg-66488d828528b.jpg') }}" alt="Product 3">
        <div class="overlay">
            <h3>Mirror_Cube</h3>
        </div>
    
</div>
<p class="text-center"><a href="/affiche/produit" class="btn btn-light">Products</a></p>
{% endblock %}
