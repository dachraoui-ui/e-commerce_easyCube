{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block stylesheets %}
{{ parent() }}
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <style>
    .navbar {
            border-bottom: 2px solid white;
            position: fixed;
            top: 0;
            width: 100%;
            font-size: 1.2em;
        }
        body {
            background-color: #fff;
            color: #fff;
            position: relative;
            padding-top: 60px; /* Adjusted to make space for the fixed navbar */
        }
        .form-control {
            background-color: #1c1c1c;
            color: #fff;
            border: none;
            border-radius: 0;
            box-shadow: inset 0 1px 3px rgba(0,0,0,0.3);
            transition: background-color 0.3s, color 0.3s, box-shadow 0.3s;
        }
        .form-control:focus {
            background-color: #333;
            color: #fff;
            box-shadow: 0 0 5px rgba(255, 102, 0, 0.5);
        }
        .btn-primary {
            background-color: #ff6600;
            color: #fff;
            border: none;
            border-radius: 0;
            transition: background-color 0.3s, transform 0.3s, box-shadow 0.3s;
        }
        .btn-primary:hover {
            background-color: #ff4500;
            transform: scale(1.05);
            box-shadow: 0 4px 10px rgba(255, 69, 0, 0.5);
        }
        .container {
            padding: 10px;
            position: relative;
            top: 10%;
            opacity: 0.9;
            height: auto;
            background: #111;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.3);
            animation: fadeIn 1s ease-in-out;
        }
        .col-md-6 {
            position: relative;
            animation: slideUp 0.5s ease-out forwards;
        }
        h1 {
            text-align: center;
            margin-bottom: 30px;
        }
        .form-group {
            margin-bottom: 20px;
        }
        .form-check-label {
            padding-left: 1.25rem; /* Default padding of form-check-label */
        }
        .form-check-input {
            margin-top: 0.3rem;
            margin-left: -1.25rem; /* Align checkbox with label text */
        }
        @keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }
        @keyframes slideUp {
            from {
                transform: translateY(100%);
            }
            to {
                transform: translateY(0);
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form method="post" class="mt-5">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %}

                    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
                    <div class="form-group">
                        <label for="username">Email</label>
                        <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
                </form>
                <hr>
                <div class="mb-3">
                    Not registered? <a href="{{ path('app_register') }}">Register now</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
